<h2>Add Your Programming Skills</h2>

<%= form_for [@user, @proficiency], url: user_proficiencies_path,  remote: true do |form| %>
  <div>
    <%= form.collection_select :skill_id, Skill.all, :id, :name, include_blank: "Programming Language" %>
    <%= form.select :level, Proficiency::LEVELS, include_blank: "Proficiency Level"  %>
    <%= form.submit "Add A Skill" %>
  </div>
<% end %>

<div id="proficiencies">
  <%= render @proficiencies %>
</div>
