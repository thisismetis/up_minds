<h3>Your Skills</h3>

<div>
  <%= button_to "Add Your Skills", new_mind_proficiency_path(@user), method: :get %>
</div>

<div>
  <% @proficiencies.each do |proficiency| %>
    <div>
      <%= render proficiency %>
      <%= button_to "Update your Skill Level", edit_mind_proficiency_path(@user, proficiency), method: :get %>
      <%= button_to "Delete Skill", mind_proficiency_path(@user, proficiency), method: :delete,
        confirm: "Are you sure you want to delete this skill?" %>
    </div>
  <% end %>
</div>


