<h2>Update profile</h2>
<h4>Update contact information:</h4>

<%= form_for @user do |form|%>
  <div>
    <%= form.text_field :first_name, placeholder: "First Name" %>
  </div>
  <div>
    <%= form.text_field :last_name, placeholder: "Last Name" %>
  </div>
  <div>
    <%= form.text_field :city, placeholder: "City" %>
  </div>
  <div>
    <%= form.text_field :state, placeholder: "State" %>
  </div>
  <div>
    <%= form.telephone_field :telephone, placeholder: "Phone Number" %>
  </div>
  <h4>Update links to your personal pages:</h4>
  <div>
    <%= form.url_field :github, placeholder: "Github link" %>
  </div>
  <div>
    <%= form.url_field :twitter, placeholder: "Twitter link" %>
  </div>
  <div>
    <%= form.url_field :linked_in, placeholder: "LinkedIn link" %>
  </div>
  <div>
    <%= form.url_field :dribbble, placeholder: "Dribbble link" %>
  </div>
  <div>
    <%= form.url_field :blog, placeholder: "Personal blog link" %>
  </div>
  <div>
    <%= form.url_field :personal_site, placeholder: "Personal website link" %>
  </div>
  <div>
    <%= form.text_area :bio, placeholder: "About you" %>
  </div>
  <div>
    <%= hidden_field_tag(has_profile: :true) %>
    <%= form.submit "Update Profile!" %>
  </div>
<% end %>


<%= link_to "Add a Featured Project", new_user_project_path(current_user) %>
