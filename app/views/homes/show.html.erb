<script>
$(function () {
    $('#skillschart').highcharts({
        chart: {
            type: 'bar'
        },
        credits: {
            text: '',
        },
        legend: {
            enabled: false
        },
        title: {
            text: 'Skills',
            color: '000000'
        },
        xAxis: {
            categories: <%== @user.proficiencies.map(&:skill_name) %>,
            gridLineWidth: 0,
            labels: {
                enabled: true,
            },
        },
        plotOptions: {
            series: {
                color: '#68228B'
            }
        },
        yAxis: {
            title: {
                text: ''
            },
            gridLineWidth: 0,
            labels: {
                enabled: false
            }
        },
        series: [{
            data: <%== @user.proficiencies.map(&:level) %>
        }],
    });
});
</script>
