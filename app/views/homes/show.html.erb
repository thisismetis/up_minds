<h2> Welcome to upMinds </h2>

<div>
  <h3>Featured Minds </h3>
  <hr>
  <div>

  <% @user.each_with_index do |user, idx| %>

    <div>
      <%= link_to user.name, user %>
    </div>

    <div id="skillschart<%= idx %>" style="width: 800px; height:250px;"></div>

    <script>
    var chart; var chart<%= idx %>
    $(function () {
      $chart = new Highcharts.Chart({
          chart: {
              renderTo: 'skillschart<%= idx %>',
              type: 'bar'
          },
          credits: {
              text: '',
          },
          legend: {
              enabled: false
          },
          title: {
              text: 'Skills',
              color: '000000'
          },
          xAxis: {
              categories: <%== user.proficiencies.map(&:skill_name) %>,
              gridLineWidth: 0,
              labels: {
                  enabled: true,
              },
          },
          plotOptions: {
              series: {
                  color: '#68228B'
              }
          },
          yAxis: {
              title: {
                  text: ''
              },
              gridLineWidth: 0,
              labels: {
                  enabled: false
              }
          },
          series: [{
              data: <%== user.proficiencies.map(&:level) %>
          }],
        });
      });
    </script>
    <hr>
  <% end %>
