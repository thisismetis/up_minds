<h1>Search results for "<%= @query %>":</h1>

<% if @results.empty? %>
  <p>No results match</p>
<% else %>
  <table>
    <tr>
      <th><%= link_to "First Name", sort: "first_name", search: { query: @query } %></th>
      <th><%= link_to "Last Name", sort: "last_name", search: { query: @query }  %></th>
      <th><%= link_to "City", sort: "city", search: { query: @query } %></th>
      <th><%= link_to "State", sort: "state", search: { query: @query } %></th>
      <th><%= link_to "Skill", sort: "skills", search: { query: @query } %></th>
      <th><%= link_to "Proficiency Level", sort: "proficiencies", search: { query: @query } %></th>
    </tr>
  <%= render @results %>
  </table>
<% end %>
